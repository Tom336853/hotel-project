<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wn.demo.mapper.UserMapper">


    <select id="selectAll" resultType="com.wn.demo.pojo.User" parameterType="com.wn.demo.pojo.User">
        select
        *
        from `user`
        <where>
            <if test="name != null and name != ''">
                and `name` like CONCAT(CONCAT('%', #{name}), '%')
            </if>
        </where>
    </select>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from `user` where userid=#{id}
    </delete>

    <insert id="add" parameterType="com.wn.demo.pojo.User">
        insert into user(`name`,userName,sex,userImage,phone,password)
        values(#{name},#{userName},#{sex},#{userImage},#{phone},#{password})
    </insert>

    <update id="update" parameterType="com.wn.demo.pojo.User">
        update `user` set `name`=#{name},userName=#{userName},
        sex=#{sex},phone=#{phone},userImage=#{userImage}
        <if test="password != null and password != ''">
            ,password=#{password}
        </if>
        where userid=#{userid}
    </update>

    <select id="selectOne" resultType="com.wn.demo.pojo.User" parameterType="java.lang.Integer">
        select
        *
        from `user` where userid=#{id}
    </select>

    <select id="findByPhone" resultType="com.wn.demo.pojo.User" parameterType="java.lang.String">
        select
        *
        from `user` where phone=#{phone}
    </select>

    <update id="addIntegral" parameterType="com.wn.demo.pojo.User">
        update `user` set `integral`= #{integral}
        where userid=#{userid}
    </update>

    <update id="forget" parameterType="com.wn.demo.pojo.User">
        update `user` set `password`= #{password}
        where phone=#{phone}
    </update>

</mapper>